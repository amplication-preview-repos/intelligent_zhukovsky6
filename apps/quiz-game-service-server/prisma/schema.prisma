datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Question {
  answers   Answer[]
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  quiz      Quiz?    @relation(fields: [quizId], references: [id])
  quizId    String?
  text      String?
  updatedAt DateTime @updatedAt
}

model Quiz {
  author       String?
  createdAt    DateTime      @default(now())
  description  String?
  id           String        @id @default(cuid())
  questions    Question[]
  quizAttempts QuizAttempt[]
  title        String?
  updatedAt    DateTime      @updatedAt
}

model Answer {
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  isCorrect  Boolean?
  question   Question? @relation(fields: [questionId], references: [id])
  questionId String?
  text       String?
  updatedAt  DateTime  @updatedAt
}

model QuizAttempt {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  quiz      Quiz?    @relation(fields: [quizId], references: [id])
  quizId    String?
  score     Int?
  timeTaken Int?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  createdAt    DateTime      @default(now())
  email        String?       @unique
  firstName    String?
  id           String        @id @default(cuid())
  lastName     String?
  password     String
  quizAttempts QuizAttempt[]
  roles        Json
  updatedAt    DateTime      @updatedAt
  username     String        @unique
}
